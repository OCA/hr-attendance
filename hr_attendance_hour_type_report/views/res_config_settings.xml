<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <block name="overtime_settings" position="after">
        <block title="Night hours" name="night_hours_settings">
          <div class="text-muted">
              Set the begining and end of the night work period. This is set in the company's timezone (configured on the partner of the company).
          </div>
          <label for="hr_night_work_hour_start" class="o_form_label">
              Beginning of night work time
          </label>
          <field
                        name="hr_night_work_hour_start"
                        class="text-center"
                        style="width: 10%; min-width: 4rem;"
                    />
          <br />
          <label for="hr_night_work_hour_end" class="o_form_label">
              End of night work time
          </label>
          <field
                        name="hr_night_work_hour_end"
                        class="text-center"
                        style="width: 10%; min-width: 4rem;"
                    />
        </block>
      </block>
    </field>
  </record>
</odoo>
