        <field name="model">hr.attendance.reason</field>
        <field
            name="inherit_id"
            ref="hr_attendance_reason.hr_attendance_reason_view_form"
        />
        <field name="arch" type="xml">
            <field name="action_type" position="after">
                <field name="description" />
            </field>
        </field>
