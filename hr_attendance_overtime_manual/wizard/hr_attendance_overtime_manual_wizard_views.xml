<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_attendance_overtime_manual_form" model="ir.ui.view">
        <field name="name">hr.attendance.overtime.manual.form</field>
        <field name="model">hr.attendance.overtime.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Manual Overtime">
                <sheet>
                    <group>
                        <field name="date" />
                        <field name="duration" widget="float_time" />
                        <field name="note" />
                    </group>
                </sheet>
                <footer>
                    <button
                        type="object"
                        name="action_create"
                        string="Create Overtime"
                        class="oe_highlight"
                    />
                    or
                    <button type="special" string="Close" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
