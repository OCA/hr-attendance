<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="res_config_settings_view_form2" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.attendance</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="80" />
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr_attendance']/div" position="inside">
                	<div
                    class="col-12 col-lg-6 o_setting_box"
                    title="Set Camera required for check."
                >
                        <div class="o_setting_left_pane">
                            <field name="group_attendance_image_capture" />
                        </div>
                    	<div class="o_setting_right_pane">
                        	<span class="o_form_label">Image Capture</span>
                        	<div class="text-muted">
                           		Use Webcam to check in and Out
                        	</div>
                    	</div>
                	</div>
                </xpath>
	        </field>
    </record>
</odoo>
